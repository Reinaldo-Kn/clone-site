&lt;div class=&quot;field-item even&quot;&gt;&lt;div class=&quot;field-collection-view clearfix view-mode-full field-collection-view-final&quot;&gt;&lt;div class=&quot;entity entity-field-collection-item field-collection-item-field-node-ign clearfix&quot; about=&quot;/fr/field-collection/field-node-ign/10842&quot; typeof=&quot;&quot; class=&quot;entity entity-field-collection-item field-collection-item-field-node-ign&quot;&gt;
