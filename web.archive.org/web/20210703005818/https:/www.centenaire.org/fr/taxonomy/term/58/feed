&lt;/div&gt;&lt;/div&gt;&lt;div class=&quot;field-item odd&quot;&gt;&lt;div class=&quot;field-collection-view clearfix view-mode-full&quot;&gt;&lt;div class=&quot;entity entity-field-collection-item field-collection-item-field-media-diaporama clearfix&quot; about=&quot;/fr/field-collection/field-media-diaporama/10608&quot; typeof=&quot;&quot; class=&quot;entity entity-field-collection-item field-collection-item-field-media-diaporama&quot;&gt;
